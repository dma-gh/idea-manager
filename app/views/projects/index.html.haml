:css
  blockquote {
    margin-bottom: -10px;
  }

%h3
  %center Active Projects
%br/
.row-fluid.projects
  - @projects.each do |project|
    .col.col-sm-12.col-md-12.col-lg-12
      .card.project
        .card-content.black-text
          %span.card-title= project.title
          %p= project.description
          - if !@comments[project.id].content.empty?
            %hr
            %h6 Latest Comment:
            %h6
              = "#{@comments[project.id].person.first_name} #{@comments[project.id].person.last_name}" if @comments[project.id].person.present?
              on #{@comments[project.id].created_at.localtime.strftime("%B %d, %Y")}
              %blockquote= @comments[project.id].content 
        .card-action
          = link_to "View Project", project
= render partial: "floating_add_project_button"
