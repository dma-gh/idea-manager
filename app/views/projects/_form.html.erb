<%= form_for :project, url: projects_path, :html => { class: "col-lg-10 col-lg-offset-1 col-md-12 col-sm-12 col-xs-12 " } do |f| %>
  <div class="form-group" >
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "Project Title", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save Project', class: "btn btn-lg waves-effect waves-light" %>
  </div>
<% end %>