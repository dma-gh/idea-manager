<%= form_for :project, url: projects_path, :html => { class: "col-lg-10 col-lg-offset-1 col-md-12 col-sm-12 col-xs-12 " } do |f| %>
  <div class="form-group input-field" >
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "Project Title", class: "form-control validate" %>
  </div>
  <div class="form-group input-field">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Project Description", class: "form-control materialize-textarea" %>
  </div>

  <div class="form-group input-field">    
    <select multiple="multiple" name="project[people][]">
      <option value="" disabled selected>Choose People to Include</option>
      <% @people.each do |person| %>
        <%= content_tag :option, "#{person.first_name} #{person.last_name}", id: person.id, value: "#{person.id}" %>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <%= f.submit 'Save Project', class: "btn btn-lg waves-effect waves-light" %>
  </div>
<% end %>