:css
  blockquote {
    font-size: 11pt;
  }
  
  .comment {
    box-shadow: -3px 2px 5px #888888;
    padding: 12px 0px 5px 12px;
    margin-top: 8px;
  }
%h5= @event.title
%p= @event.description
%br/
.comments
  - @event.comments.each do |comment|
    .comment
      %h6
        = "#{comment.person.first_name} #{comment.person.last_name}" if comment.person.present?
        on #{comment.created_at.localtime.strftime("%B %d, %Y")}
      %blockquote= comment.content
%br/
= render 'form'
.fixed-action-btn.horizontal
  = link_to project_path(@project), class: "btn-floating btn-large red" do
    %i.material-icons keyboard_arrow_left
%br/
%br/
